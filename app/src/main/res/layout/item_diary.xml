<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_diary_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="18/12/2018"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/type_diary_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/category_diary_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục 123"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/amount_diary_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="100.000"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:text="đ"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/description_diary_item"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nội dung"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/money_source_diary_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="12dp"
            android:text="Ví" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/lightGray" />

</LinearLayout>
